<% layout('./layouts/boilerplate') %>
<h1>All Transactions with boilerplate</h1>

<div>
    <a href="transactions/new">Add Transaction Manually</a>
</div>


<% for (let transaction of transactions) {%>
    <div class="card" mb-3>
        <div class="row">
            <div class="col-md-4">
                <img class="img-fluid" src="<%= transaction.images[0].url %> " alt="">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= transaction.description %> </h5>
                    <p class="card-text">$<%= transaction.cost %> </p>
                    <p class="card-text"><%= transaction.date %> </p>
                    <a class="btn btn-primary" href="/transactions/<%= transaction.id %> ">View</a>
                </div>
            </div>
        </div>
    </div>

<% } %>

